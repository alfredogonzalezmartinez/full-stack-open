  "author": "Alfredo González Martínez",
  "license": "ISC",
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "16.0.0",
    "express": "4.17.3",
    "express-async-errors": "3.1.1",
    "mongoose": "6.2.3",
    "mongoose-unique-validator": "3.0.0"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "eslint": "8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.25.2",
    "jest": "27.5.1",
    "nodemon": "2.0.15",
    "supertest": "6.2.2"
  },
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "extends": "airbnb-base",
    "rules": {
      "no-underscore-dangle": [
        "error",
        {
